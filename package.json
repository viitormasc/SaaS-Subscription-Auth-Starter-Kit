{
  "name": "Subscription SaaS starter kit",
  "version": "1.0.0",
  "description": "A starter kit integrated with auth and stripe for Subscription SaaS",
  "dev": "concurrently \"npm run server\" \"npm run client\"",
  "scripts": {
    "client": "npm run dev --workspace=client",
    "server": "npm run dev --workspace=server",
    "dev" : "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "start": "npm run start --workspace=server",
    "start:both": "concurrently \"npm run start --workspace=server\" \"npm run preview --workspace=client\"",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "install:all": "npm install && npm install --workspaces",
    "clean": "npm run clean --workspaces "
  },
  "workspaces": [
    "client",
    "server"
  ],
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [],
  "license": "MIT",
  "author": "Vitor Mascarenhas",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.0"
  }
}
